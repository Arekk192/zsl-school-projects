{{> navbar}}
<div class="container mt-4">
  <h1 class="mt-5 mb-4 fs-1">Edit car page</h1>
  <form method="POST">
    <table class="table">
      {{> thead}}
      <tbody>
        {{#each data}}
        <tr>
          <td class="">
            <div class="d-flex align-items-center" style="height: 38px;">
              {{_id}}</div>
          </td>
          <td class="">
            <div class="d-flex align-items-center" style="height: 38px;">
              {{#if edit}}
                <select name="insuranced">
                  <option value="nie">nie</option>
                  <option value="tak">tak</option>
                  <option value="brak danych">brak danych</option>
                </select>
              {{else}} {{insuranced}} {{/if}}
            </div>
          </td>
          <td class="">
            <div class="d-flex align-items-center" style="height: 38px;">
              {{#if edit}}
                <select name="gasoline">
                  <option value="nie">nie</option>
                  <option value="tak">tak</option>
                  <option value="brak danych">brak danych</option>
                </select>
              {{else}} {{gasoline}} {{/if}}
            </div>
          </td>
          <td class="">
            <div class="d-flex align-items-center" style="height: 38px;">
              {{#if edit}}
                <select name="damaged">
                  <option value="nie">nie</option>
                  <option value="tak">tak</option>
                  <option value="brak danych">brak danych</option>
                </select>
              {{else}} {{damaged}} {{/if}}
            </div>
          </td>
          <td class="">
            <div class="d-flex align-items-center" style="height: 38px;">
              {{#if edit}}
                <select name="fourwheeled">
                  <option value="nie">nie</option>
                  <option value="tak">tak</option>
                  <option value="brak danych">brak danych</option>
                </select>
              {{else}} {{fourwheeled}} {{/if}}
            </div>
          </td>
          <td>
            {{#if edit}}
              <div class="d-flex gap-2">
                <button class="btn btn-danger text-uppercase" formaction="/edit"> cancel </button>
                <button
                  class="btn btn-dark text-uppercase"
                  formaction="/edit"
                  name="id"
                  value="{{_id}}"
                >
                  update
                </button>
              </div>
            {{else}}
              <button
                class="btn btn-dark text-uppercase"
                formaction="/edit"
                name="id"
                value="{{_id}}"
              >
                edit
              </button>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </form>
</div>